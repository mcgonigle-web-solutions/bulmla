<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="template">
	<name>Bulmla</name>
	<creationDate>2020-02-22</creationDate>
	<author>Patrick McGonigle</author>
	<authorEmail>john@example.com</authorEmail>
	<authorUrl>http://projects.mcgonigle.xyz/bulmla</authorUrl>
	<copyright>Patrick McGonigle 2020</copyright>
	<license>GNU/GPL</license>
	<version>0.1.3</version>
	<description>Bulmla</description>
	<files>
		<filename>index.php</filename>
        <filename>error.php</filename>
        <filename>offline.php</filename>
		<filename>templateDetails.xml</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
		<folder>img</folder>
        <folder>js</folder>
		<folder>style</folder>
	</files>
	<positions>
		<position>breadcrumb</position>
		<position>left</position>
		<position>right</position>
		<position>logo</position>
		<position>navigation</position>
		<position>navigationButtons</position>
		<position>hero</position>
		<position>header</position>
		<position>aside-right</position>
		<position>aside-left</position>
		<position>footer</position>
	</positions>
	<config>
        <fields name="params">
            <fieldset name="advanced">
               
                <field 
					name="googleFont"
					type="radio"
					label="TPL_BULMLA_FONT_LABEL"
					description="TPL_BULMLA_FONT_DESC"
					class="btn-group btn-group-yesno"
					default="1"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field 
					name="googleFontName" 
					type="text" 
					label="TPL_BULMLA_FONT_NAME_LABEL"
					description="TPL_BULMLA_FONT_NAME_DESC" 
					class="" 
					default="Open+Sans"
					showon="googleFont:1" 
				/>
				<field 
					name="logoFile" 
					type="media" 
					label="TPL_BULMLA_LOGO_LABEL"
					description="TPL_BULMLA_LOGO_DESC" 
					class="" 
					default=""
				/>

				<field 
					name="sitetitle"  
					type="text" 
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					default=""
					filter="string" 
				/>

				<field 
					name="sitedescription"  
					type="text" 
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					default=""
					filter="string" 
				/>
				

            </fieldset>      
        </fields>
    </config>
</extension>